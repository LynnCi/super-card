/* pages/cardMy/cardMy.wxss */
.container{
  width:100%;
  height:100%;
  background: #f5f9ff;
}
/* 姓名 */
.banner{
  width:100%;
  height:880rpx;
  padding:40rpx 30rpx 60rpx 30rpx;
  background: #fff;
  box-sizing: border-box;
}
.banner .main{
  width:100%;
  height:100%;
  box-shadow:0rpx 8rpx 20rpx #ccc;
  border-radius:15rpx;

}
.banner .main .mainBg{
  position: relative;
  width:100%;
  height:634rpx;
  text-align: center;
  overflow: hidden;
}
.bannerImg{
  width:100%;
  height:100%;
  top:0;
  left:0;
}
.logo{
  position: absolute;
  width:142rpx;
  height:150rpx;
  top:135rpx;
  left:0;
  right:0;
  margin:0 auto;
}
.logo2{
  position: absolute;
  width:498rpx;
  top:345rpx;
  left:0;
  right:0;
  margin:0 auto;
}
.logo2 image{
  width:40rpx;
  height:40rpx;
  vertical-align: bottom;
}
.logo2 text{
  color:#fff;
  font-size:72rpx;
  padding:0 26rpx;
  line-height:72rpx;
}
.xc{
  position: absolute;
  bottom:125rpx;
  left:0;
  right:0;
  margin:0 auto;
  font-size:36rpx;
  color:#fff;
}
.myTxt{
  position: absolute;
  font-size:36rpx;
  top:30rpx;
  right:30rpx;
  color:#fff;
}
.main .name{
  padding:0 30rpx;
  width:100%;
  height:145rpx;
  box-sizing:border-box;
  display: flex;
  align-items: center;
  justify-content:space-between;

}
.name .nameLeft{
  max-width: 260rpx;
}
.name .nameRight{
  font-size:26rpx;
  text-align: right;
  max-width:370rpx;
}
.name text{
  display: block;
}
.name .nameLeft .nameTxt{
  font-size:62rpx;
  color:#333;
}
.name .nameLeft .nameLet{
  font-size:24rpx;
}
.name .nameRight .zhiwu{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.name .nameRight .unit{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.hide{
  display: none;
}
.show{
  display: block;
}

/* 搜索 */
.search{
  width:100%;
  height: auto;
}
.search view{
  width:690rpx;
  height:70rpx;
  background: #eee;
  border-radius:10rpx;
  margin:38px auto 30px;
  font-size:24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#888;
}
.search view image{
  width:28rpx;
  height:28rpx;
  margin-right:20rpx;
}

/**************************** 收到的名片 ****************************/
.recive{
  width:100%;
  height:auto;
  
}
.recive .cardTop{
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  padding:0 30rpx;
  box-sizing: border-box;
  color:#888888;
  background: #fff;
}
.recive .cardTop .card{
  width:40rpx;
  height:30rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.recive .cardTop>text{
  /* vertical-align: middle; */
  font-size:28rpx;
  line-height: 30rpx;
}

/**************************** 名片列表 ****************************/
.cardList{
  width:100%;
  height:auto;
}
.cardList .listItem{
  width: 100%;
  height: auto;
}
.cardList .listItem .letter2{
  width:100%;
  height:58rpx;
  line-height: 58rpx;
  font-size:24rpx;
  color:#888;
  padding:0 30rpx;
  display: block;
  box-sizing: border-box;
}
.cardList .listItem .item{
  width:100%;
  height:160rpx;
  padding:15rpx 30rpx;
  display: flex;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
}
.cardList .listItem .item .men{
  width:215rpx;
  height: 130rpx;
  margin-right:18rpx;
}
.cardList .listItem .item .name{
  font-size:36rpx;
  line-height: 50rpx;
  display: block;
}
.cardList .listItem .item .intro{
  font-size:26rpx;
  line-height: 40rpx;
  display: block;
}
.cardList .num{
  width:100%;
  height:84rpx;
  line-break: 84px;
  font-size:26rpx;
  color:#999;
  text-align: center;
}
.cardList text{
  line-height: 84rpx;
}
/**************************** 添加到桌面&&找到 ****************************/
.myBtn{
  width:100%;
  height:200rpx;
  background: #fff;

  margin-bottom:176rpx;
}
.myBtn>view{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  font-size:26rpx;
  color:#333;
  padding:0 50rpx 0 30rpx;
  box-sizing: border-box;
}
.myBtn .addCard{
  border-bottom:1rpx solid #f5f9ff;
  box-sizing: border-box;
  vertical-align: middle;
}
.myBtn text{
  float:left;
}
.myBtn .tb{
  width:48rpx;
  height:48rpx;
  margin-right:20rpx;
  float:left;
  margin-top:26rpx;
}
.myBtn .more{
  width:14rpx;
  height:24rpx;
  float:right;
  margin-top:38rpx;
}
/* 修改 */
.edit image{
  position: fixed;
  width:100rpx;
  height:100rpx;
  bottom:40rpx;
  right:30rpx;
}
/*字母*/
.letter{
  position: fixed;
  right:30rpx;
  top:50%;
  margin:0 auto;
  text-align: center;
}
.letter image{
  width:11rpx;
  height:25rpx;
  display: block;
  margin:0 auto;
}
.letter text{
  font-size:26rpx;
  color:#333;
  display: block;
  line-height:38rpx;
  text-align: center;
}
/*********************** 首页弹框 *****************************/
.boxShow{
    position: fixed;
    top:0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 999;
    
}
.boxShow1{
  background: rgba(0,0,0,.2);
}
.boxShow2{
  background: rgba(0,0,0,.7);
}
.boxMain{
  position: absolute;
  width:520rpx;
  height: 430rpx;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  border-radius: 10rpx;
  background: #fff;

}
.boxTop{
  width:100%;
  height:340rpx;
  border-bottom:1rpx solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size:34rpx;
}
.boxTop image{
  width:120rpx;
  height:124rpx;
  margin-bottom:50rpx;
}
.boxBtn{
  width:100%;
  height:90rpx;
  line-height: 90rpx;
  font-size:28rpx;
}
.boxBtn text{
  width:50%;
  text-align: center;
  display: inline-block;
  box-sizing: border-box;
}
.boxBtn text.close{
  color:#999;
  border-right:1rpx solid #ddd;
}
.boxBtn text.start{
  color:#003893;
}
