/**** 添加桌面弹框&&首页弹框公共css，单独设置background*****/
.boxShow2 image{
  position: absolute;
  width:253rpx;
  height:291rpx;
  top:65rpx;
  right:110rpx;
}
.boxShow2 .boxTxt2{
  position: absolute;
  top:50%;
  left:50%;
  color:#fff;
  text-align: center;
  margin:0 auto;
  transform: translate(-50%,0);
}
.boxShow2 .boxTxt2 text{
  display: block;
  font-size:34rpx;
  line-height: 72rpx;

}
button{
  width:460rpx;
  height:90rpx;
  line-break: 90rpx;
  text-align: center;
  font-size:36rpx;
  color:#fff;
  background: linear-gradient(to right,#52a3f4 ,#013994);
