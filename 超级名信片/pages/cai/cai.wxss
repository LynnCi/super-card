/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.jiancai{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: none;
}
.box{
  padding: 40rpx 30rpx 0;
}
.cardImg{
  position: relative;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden
}
.card_bg{
  display: block;
  width: 100%;
}
.card_logo{
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 180rpx;
  height: 180rpx;
  border:1rpx dashed #fff;
}
.card_logo image,{
  display: block;
  width: 100%;
  height: 100%;
}
.card_title{
  position: absolute;
  top: 60%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 80%;
}

.card_biaoyu{
  position: absolute;
  top: 75%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 80%;
  font-size: 36rpx;
  text-align: center;
  color: #fff;
}
.cardInfo{
  display: flex;
  align-items: center;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  overflow: hidden;
  background: #fff;
 box-shadow:0rpx 10rpx 20rpx #cccc;

}
.cardNames{
  flex: 0 0 200rpx;
  width: 200rpx;
  padding: 30rpx 0 30rpx 30rpx;
  box-sizing: border-box;
}
.nameText{
  font-size: 46rpx;
  font-weight: 500;
}
.nameText2{
  font-size: 32rpx;
}
.cardConf{
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  padding: 30rpx 30rpx 30rpx 0;
}
.confZhiwei{
    text-align: right;
    font-size: 30rpx;
}
.confDanwei{
  text-align: right;
  font-size: 30rpx;
}